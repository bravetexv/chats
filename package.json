{
  "name": "chats",
  "private": true,
  "version": "0.0.0",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "dev:electron": "cross-env NODE_ENV=development concurrently -k \"npm run dev\" \"npm run electron\"",
    "build:electron": "npm run build && electron-builder",
    "build:run": "npm run build:electron && \"release\\win-unpacked\\Multi-Platform Chat Manager.exe\""
  },
  "build": {
    "appId": "com.chatmanager.app",
    "productName": "Multi-Platform Chat Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron_app/**/*",
      "main.cjs"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@types/tmi.js": "^1.8.6",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "express": "^5.2.1",
    "googleapis": "^166.0.0",
    "ip": "^2.0.1",
    "lucide-react": "^0.555.0",
    "pusher-js": "^8.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io": "^4.8.1",
    "tailwind-merge": "^3.4.0",
    "tmi.js": "^1.8.5",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.6",
    "@types/ip": "^1.1.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/socket.io": "^3.0.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^8.0.1"
  }
}
